<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".DashboardActivity">

    <!-- Balance Card Section - Now includes greeting and profile picture -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBalance"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:backgroundTint="#6200EE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account_circle"
                    android:contentDescription="Profile Picture"
                    app:tint="#FFFFFF" />

                <!-- Greeting TextView -->
                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="User Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Balance TextView -->
            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,250.00"
                android:textColor="#FFFFFF"
                android:textSize="38sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quick Actions/Features Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- First Row of Features -->
        <!-- Send Money -->
        <LinearLayout
            android:id="@+id/sendMoney"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/makePayment"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send_money"
                app:tint="#6200EE"
                android:contentDescription="Send Money" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Money"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Make Payment -->
        <LinearLayout
            android:id="@+id/makePayment"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toEndOf="@id/sendMoney"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cashout"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_payment"
                app:tint="#6200EE"
                android:contentDescription="Make Payment" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Payment"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Cashout -->
        <LinearLayout
            android:id="@+id/cashout"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toEndOf="@id/makePayment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_withdraw"
                app:tint="#6200EE"
                android:contentDescription="Withdraw" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Second Row of Features -->
        <!-- Request Money -->
        <LinearLayout
            android:id="@+id/requestMoney"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sendMoney"
            app:layout_constraintEnd_toStartOf="@+id/addMoney"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_request_money"
                app:tint="#6200EE"
                android:contentDescription="Request Money" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Money"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Add Money -->
        <LinearLayout
            android:id="@+id/addMoney"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toEndOf="@id/requestMoney"
            app:layout_constraintTop_toBottomOf="@id/makePayment"
            app:layout_constraintEnd_toStartOf="@+id/statements"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add_money"
                app:tint="#6200EE"
                android:contentDescription="Add Money" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Money"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Statements -->
        <LinearLayout
            android:id="@+id/statements"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toEndOf="@id/addMoney"
            app:layout_constraintTop_toBottomOf="@id/cashout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_statement"
                app:tint="#6200EE"
                android:contentDescription="Statements" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statements"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Third Row of Features -->
        <!-- Bills -->
        <LinearLayout
            android:id="@+id/bills"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/requestMoney"
            app:layout_constraintEnd_toStartOf="@+id/scanPay"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bill"
                app:tint="#6200EE"
                android:contentDescription="Bills" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Bills"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Scan & Pay -->
        <LinearLayout
            android:id="@+id/scanPay"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/feature_card_bg"
            app:layout_constraintStart_toEndOf="@id/bills"
            app:layout_constraintTop_toBottomOf="@id/addMoney"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_qr_code_scan"
                app:tint="#6200EE"
                android:contentDescription="Scan &amp; Pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan &amp; Pay"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
