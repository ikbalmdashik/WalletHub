<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    tools:context=".sendmoneyFragment">

    <!-- Back Button - This will be visible on all steps after the first. -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="go_back"
        android:tint="#FFFFFF"
        android:layout_gravity="top|start"
        android:visibility="gone" />

    <!-- Step 1: Enter Receiver Email -->
    <LinearLayout
        android:id="@+id/step_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Receiver Email"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/receiver_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:background="@drawable/rounded_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999" />

    </LinearLayout>

    <!-- Step 2: Enter Amount -->
    <LinearLayout
        android:id="@+id/step_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/receiver_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver Name Placeholder"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/amount_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:background="@drawable/rounded_input"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"/>

    </LinearLayout>

    <!-- Step 3: Confirmation -->
    <ScrollView
        android:id="@+id/step_three_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Details"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/sender_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender: Your Name\nEmail: your.email@example.com"
                android:textSize="18sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/receiver_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver: Receiver Name Placeholder\nEmail: receiver.email@example.com"
                android:textSize="18sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/amount_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: $0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

    <!-- Unified "Next" and "Confirm" Button at the bottom -->
    <Button
        android:id="@+id/action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFF"
        android:text="Next"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"/>

</FrameLayout>
